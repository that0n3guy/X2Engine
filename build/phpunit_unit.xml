<phpunit bootstrap="bootstrap.php"
                colors="false"
                convertErrorsToExceptions="true"
                convertNoticesToExceptions="true"
                convertWarningsToExceptions="true"
                stopOnFailure="false">
<filter>
  <whitelist processUncoveredFilesFromWhitelist="true">
    <directory suffix=".php">../x2engine/protected/components</directory>
    <directory suffix=".php">../x2engine/protected/models</directory>
    <directory suffix=".php">../x2engine/protected/modules</directory>
    <exclude>
      <file>../x2engine/protected/components/GoogleAuthenticator.php</file>
      <file>../x2engine/protected/components/x2flow/shortcodes.php</file>
      <file>../x2engine/protected/components/TranslationManager.php</file>
      <file>../x2engine/protected/models/formModels/MobileFormEditor.php</file>
	  <directory suffix=".php">../x2engine/protected/components/calendarSync</directory>
      <directory suffix=".php">../x2engine/protected/components/ThemeGenerator/templates</directory>
      <directory suffix=".php">../x2engine/protected/components/phpMailer</directory>
      <directory suffix=".php">../x2engine/protected/components/sortableWidget/views</directory>
      <directory suffix=".php">../x2engine/protected/components/views</directory>
      <directory suffix=".php">../x2engine/protected/components/WebFormDesigner/views</directory>
      <directory suffix=".php">../x2engine/protected/components/LGPL</directory>
      <directory suffix=".php">../x2engine/protected/components/TwitterAPI</directory>
      <directory suffix=".php">../x2engine/protected/components/leftWidget/views</directory>
      <directory suffix=".php">../x2engine/protected/components/x2flow/actions/incomplete</directory>
      <directory suffix=".php">../x2engine/protected/components/x2flow/triggers/incomplete</directory>
      <directory suffix=".php">../x2engine/protected/modules/*/controllers</directory>
      <directory suffix=".php">../x2engine/protected/modules/*/views</directory>
      <directory suffix=".php">../x2engine/protected/modules/*/components/views</directory>
      <directory suffix=".php">../x2engine/protected/modules/*/components/actions</directory>
      <directory suffix=".php">../x2engine/protected/modules/mobile/*</directory>
      <directory suffix=".php">../x2engine/protected/modules/*/components/reports</directory>
    </exclude>
  </whitelist>
</filter>

</phpunit>

